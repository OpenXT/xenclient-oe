+static void battery_port_1_write(void *opaque, hwaddr addr,
+                                 uint64_t val, uint32_t size)
+{
+    struct xen_battery_manager *xbm = opaque;
+    struct battery_buffer *bb;
+
+    bb = &(xbm->batteries[xbm->index]);
