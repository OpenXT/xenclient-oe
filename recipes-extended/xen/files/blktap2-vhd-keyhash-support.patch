+			break;
+		case 'N':
+			nonce = optarg;
+			break;
+		case 'H':
+			keyhash = optarg;
+			break;
+		case 's':
+			set = 1;
+			break;
+		case 'c':
+			check = 1;
+			break;
+		case 'C':
+			calc = 1;
+			break;
+		case 'p':
+			print = 1;
+			break;
+		case 'h':
+			err = 0;
+		default:
