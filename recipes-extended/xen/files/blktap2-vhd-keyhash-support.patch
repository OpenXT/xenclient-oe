+		printf("\n");
+		goto out;
+	}
+
+	if (!name)
+		goto usage;
+
+	if (set) {
+		if (check)
+			goto usage;
+
+		if (!(!!keypath ^ !!keyhash))
+			goto usage;
+	} else if (check) {
+		if (!keypath)
+			goto usage;
+
+		if (nonce || keyhash)
