+static void fork_helper(libxl__gc *gc, const char *helper_path,
+                        const char *xs_pid_key, int guest_domid, int dm_domid)
+{
+    pid_t pid;
+
+    pid = fork();
+    if (pid == -1)
+        LOG(ERROR, "Failed to fork");
+    else if (pid == 0)
