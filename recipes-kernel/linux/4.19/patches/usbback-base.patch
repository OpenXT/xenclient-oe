+		usbif->irq = 0;
+	}
+
+	if (usbif->usb_rings.common.sring) {
+		xenbus_unmap_ring_vfree(dev, usbif->usb_ring_addr);
+		usbif->usb_rings.common.sring = NULL;
+		usbif->usb_ring_addr = NULL;
+	}
+}
