+
+struct usbif_response {
+    uint64_t            id;              /* copied from request */
+    usbif_request_len_t actual_length;
+    uint32_t            data;
+    int16_t             status;          /* USBIF_RSP_???       */
+    uint32_t            error_count;     /* total ISOCH error count */
+};
