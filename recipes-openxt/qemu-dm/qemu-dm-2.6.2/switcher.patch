+        first = 0xe0;
+        break;
+    case KEY_RIGHTALT:
+        keycode = 0x38;
+        first = 0xe0;
+        break;
+    case KEY_LEFTMETA:
+        keycode = 0x5B;
+        first = 0xe0;
+        break;
+    case KEY_RIGHTMETA:
+        keycode = 0x5C;
+        first = 0xe0;
