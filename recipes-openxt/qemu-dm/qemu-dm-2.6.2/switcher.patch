+static void input_set_slot(XenInput *x, uint8_t slot)
+{
+    if (x->set_slot_handler) {
+        x->set_slot_handler(x->opaque, slot);
+    } else {
+        DEBUG_MSG("no set slot handler\n");
+    }
+}
